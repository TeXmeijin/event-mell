generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id         String       @id @unique
  fullname   String?
  username   String?
  email      String       @unique
  image      String?
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @default(now()) @map("updated_at")
  EventDraft EventDraft[]
}

model EventDraft {
  id        String   @id @unique
  title     String
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}
